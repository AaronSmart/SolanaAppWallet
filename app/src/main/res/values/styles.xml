<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">0dip</item>
    </style>

    <style name="text_right_illegaDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="edit_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">end</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="edit_right2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">end</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="line_transverse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">#CFD8DF</item>
    </style>


    <style name="edit_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="rbYesNoDetails" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/message_rb_notice</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">@drawable/message_text_notice</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="checkbox_response_right" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/response_is_selected</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">@drawable/message_text_notice</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="dialog_common" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- <item name="android:windowAnimationStyle">@style/DialogAnimation</item> -->
    </style>

    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/line</item>
    </style>

    -<style name="MyDialogStyle2">

